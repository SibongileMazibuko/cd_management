<div class="span8">		
	<div class="well">
	<h4>Register</h4>
	<%= flash[:error] %>
	<fieldset class="myfieldset">
		<legend class="mylegend"> Sign-up Details Required</legend>
		<%= simple_form_for :query, url: sign_up_path(), method: :post, :html => {:class => 'form-horizontal' } do |f| %>
			<table>
				<tr>			
					<td><%= f.input :first_name, :prompt => "enter username",
		                    label: "First Name",
		                    required: true,
		                    :input_html => {:value =>@first_name} %></td>
		        </tr>
		        <tr>
		            <td><%= f.input :last_name,
		            	    label: "Last Name",
		            	    required: true,
		            	    :input_html => {:value =>@last_name} %></td>
				</tr>
				<tr>
		            <td><%= f.input :email,
		            	    label: "Email",
		            	    required: true,
		            	    :input_html => {:value =>@email} %></td>
				</tr>
				<tr>
		            <td><%= f.input :username,
		            	    label: "Username",
		            	    required: true,
		            	    :input_html => {:value =>@username} %></td>
				</tr>
				<tr>
		            <td><%= f.input :password,
		            	    label: "Password",
		            	    required: true %></td>
				</tr>
				<tr>
		            <td><%= f.input :password2,
		            	    label: "Re-enter Password",
		            	    required: true %></td>
				</tr>
				<tr>
					<td colspan="2">
						<div class="col-sm-10">
							<div class="form_button"> 
					      		<%= f.button :submit, 'Save', 'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large" %>
					      		<%= link_to 'Cancel', welcome_index_path,
					      					'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large", method: 'get' %>
					    	</div>
					    </div>						
					</td>
				</tr>
			</table>
		<%end%>
	</fieldset>
	</div>
</div>

<style type="text/css">
	.myfieldset {
    border: 1px solid #DDD;
    padding: 0 1.4em 1.4em 1.4em;
    margin: 0 0 1.5em 0;
    overflow: hidden;
	}
	.mylegend {
	    font-size: 0.9em;
	    font-weight:bolder;
	    width: auto;
	    border-bottom: 0px;
	    padding-left:7px;
	    padding-right: 7px;
	}
</style>