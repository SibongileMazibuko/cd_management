<div class="row-fluid">		
	<div class="span4">
		<div class="well">
		<h4>Add/Edit Artist Details</h4>
		<h3 class="alert-danger"><%= flash[:error] %></h3>
		<fieldset class="myfieldset">
		<legend class="mylegend"> Artist Details</legend>
		<%= simple_form_for :query, url: add_edit_artist_path(), method: :post, :html => {:class => 'form-horizontal' } do |f| %>
			<%= f.hidden_field :mode, {:value => @mode} %> 
			<%= f.hidden_field :id, {:value => @artist ? @artist.id : ""} %>
			<table>
				<tr>
					<td><%= f.input :first_name, :prompt => "enter username",
		                    label: "First Name",
		                    required: true,
		                    :input_html => {:value =>@artist ? @artist.first_name : ""} %></td>
		        </tr>
		        <tr>
		            <td><%= f.input :last_name,
		            	    label: "Last Name",
		            	    required: true,
		            	    :input_html => {:value =>@artist ? @artist.last_name : ""} %></td>
				</tr>
				<tr>
		            <td><%= f.input :email,
		            	    label: "Email",
		            	    required: true,
		            	    :input_html => {:value =>@artist ? @artist.email : ""} %></td>
				</tr>
				<tr>
		            <td><%= f.input :mobile,
		            	    label: "Mobile Number",
		            	    required: true,
		            	    :input_html => {:value =>@artist ? @artist.mobile_number : ""} %></td>
				</tr>
				<tr>
		            <td><%= f.input :country,
		            	    label: "Country", selected: @artist ? @artist.country : "",
		            	    required: true,
		            	    :input_html => {:value =>@artist ? @artist.country : ""} %></td>
				</tr>
				<tr>
					<td colspan="2">
						<div class="col-sm-10">
							<div class="form_button"> 
					      		<%= f.button :submit, 'Save', 'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large" %>
					      		<% if @mode == "Edit"%>
					      			<%= link_to 'Cancel', artist_info_path(query:{id: @artist.id}),
					      					    'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large", method: 'get' %>
					      		<%else%>
					      			<%= link_to 'Cancel', home_index_path(),
					      					    'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large", method: 'get' %>
					      		<%end%>
					    	</div>
					    </div>						
					</td>
				</tr>
			</table>
		<%end%>
	</fieldset>
		</div>
	</div>
	
<div class="span4">
  <div class="ads"><br />
  	<% t = rand(1..4) %>
  	<img src="/assets/simfy<%= t %>.jpg"></div>
</div>
</div>

<style type="text/css">
	.myfieldset {
    border: 1px solid #DDD;
    padding: 0 1.4em 1.4em 1.4em;
    margin: 0 0 1.5em 0;
    overflow: hidden;
	}
	.mylegend {
	    font-size: 0.9em;
	    font-weight:bolder;
	    width: auto;
	    border-bottom: 0px;
	    padding-left:7px;
	    padding-right: 7px;
	}
</style>