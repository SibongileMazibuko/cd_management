<div class="row-fluid">		
	<div class="span6">
		<div class='well'>
		<h4>Add/Edit Album Details</h4>
		<h3 class="alert-danger"><%= flash[:error] %></h3>
		<fieldset class="myfieldset">
			<legend class="mylegend"> Artist Details</legend>
			<%= simple_form_for :query, url: add_edit_album_path(), method: :post, :html => {:class => 'form-horizontal' } do |f| %>
				<%= f.hidden_field :mode, {:value => @mode} %> 
				<%= f.hidden_field :id, {:value => @artist.id} %>
				<%= f.hidden_field :album_id, {:value => @album ? @album.id : ""}%>
				<table>
					<tr>			
						<td><%= f.input :title_name, :prompt => "enter title",
			                    label: "Title Name",
			                    required: true,
			                    :input_html => {value: @title_name ? @title_name : @album ? @album.title_name : ""} %></td>
			        </tr>
			        <tr>			
						<td><%= f.input :record_label,
			                    label: "Record Label Name",
			                    required: true,
			                    :input_html => {value: @record_label ? @record_label : @album ? @album.record_label : ""} %></td>
			        </tr>
			        <tr>
			            <td><%= f.input :no_of_songs,
			            	    label: "Number of Songs",
			            	    required: true,
			            	    :input_html => {value: @no_of_songs ? @no_of_songs : @album ? @album.number_of_songs : ""} %></td>
					</tr>
					<tr>
			            <td><%= f.input :cost_amount,
			            	    label: "Cost Amount",
			            	    required: true,
			            	    :input_html => {value: @cost_amount ? @cost_amount : @album ? @album.cost_amount : ""} %></td>
					</tr>
					<tr>
			            <%= f.input :release_date, :as => :date, :prompt => "Please Select...",
	                      :input_html => {value: @date_available ? @date_available : @album ? @album.release_date : ""},
	                      required: true %>
					</tr>
					<script type="text/javascript">$("input.date_picker").datepicker({format: 'yyyy/mm/dd'});</script>							
					<tr>
						<td colspan="2">
							<div class="col-sm-10">
								<div class="form_button"> 
						      		<%= f.button :submit, 'Save', 'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large" %>
						      		<%= link_to 'Cancel', artist_info_path(query:{id: @artist.id}),
						      					'data-disable-with' => 'Processing...', :class => "btn btn-orange btn-large", method: 'get' %>
						    	</div>
						    </div>						
						</td>
					</tr>
				</table>
			<%end%>
		</fieldset>	 
		</div>
	</div>
<div class="span4">
  <div class="ads"><br />
  	<% t = rand(1..4) %>
  	<img src="/assets/simfy<%= t %>.jpg"></div>
</div>
</div>

<style type="text/css">
	.myfieldset {
    border: 1px solid #DDD;
    padding: 0 1.4em 1.4em 1.4em;
    margin: 0 0 1.5em 0;
    overflow: hidden;
	}
	.mylegend {
	    font-size: 0.9em;
	    font-weight:bolder;
	    width: auto;
	    border-bottom: 0px;
	    padding-left:7px;
	    padding-right: 7px;
	}
</style>